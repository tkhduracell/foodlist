{
  "hosting": {
    "public": "webapp/dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "predeploy": [
      "npm run --prefix webapp/ test",
      "npm run --prefix webapp/ lint",
      "npm run --prefix webapp/ build"
    ],
    "postdeploy": [
      "cowsay 'Hurray!'"
    ]
  },
  "functions": {
    "predeploy": "npm --prefix \"$RESOURCE_DIR\" run build"
  }
}
